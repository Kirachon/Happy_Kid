<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include app data in backup -->
    <include domain="sharedpref" path="app_settings.xml"/>
    <include domain="file" path="audio_cache/"/>
    
    <!-- Exclude sensitive data from backup -->
    <exclude domain="sharedpref" path="user_preferences.xml"/>
    <exclude domain="database" path="user_progress.db"/>
</full-backup-content>
