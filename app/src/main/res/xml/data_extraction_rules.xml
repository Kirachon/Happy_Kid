<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="user_preferences.xml"/>
        <exclude domain="database" path="user_progress.db"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include app data for device transfer -->
        <include domain="sharedpref" path="app_settings.xml"/>
        <include domain="file" path="audio_cache/"/>
    </device-transfer>
</data-extraction-rules>
